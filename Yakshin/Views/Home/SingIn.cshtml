@model Yakshin.Models.LoginModel
@{
    DateTime dateTime = DateTime.Now;
}
<form asp-antiforgery="true" asp-action="SingIn" asp-controller="Home" autocomplete="off" class="row" style="margin-bottom: 5px;">
    <fieldset>
        <div class="form-group col-10">
            <label for="username" class="form-label mt-4">Логин</label>
            <input asp-for="Username" type="text"
                   pattern="[A-z0-9.]{2,50}" minlength="2" maxlength="50"
                   autofocus class="form-control" id="username" required
                   placeholder="Введите логин">
            <small id="usernameHelp" class="form-text text-muted">Никому не сообщайте данные от аккаунта!</small>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group col-10">
            <label for="password" class="form-label mt-4">Пароль</label>
            <input asp-for="Passwords" type="password"
                   class="form-control" id="password" required
                   placeholder="************">
            <span asp-validation-for="Passwords" class="text-danger"></span>
        </div>

        <div class="form-group col-10">
            <button type="submit" class="btn btn-outline-info"
                    style="width: auto; height: auto;">
                Войти
            </button>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SingUp">Регистрация</a>
        </div>
    </fieldset>
</form>
